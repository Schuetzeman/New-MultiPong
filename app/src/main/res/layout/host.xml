<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/game_Start"
        android:layout_width="317dp"
        android:layout_height="54dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="19dp"
        android:text="Game_Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/V_slider"
        android:layout_width="289dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="623dp" />

    <SeekBar
        android:id="@+id/Game_point_slider"
        android:layout_width="289dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="574dp" />

    <TextView
        android:id="@+id/Win_Points"
        android:layout_width="129dp"
        android:layout_height="24dp"
        android:text="Win Points"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/Velcity_speed"
        android:layout_width="129dp"
        android:layout_height="24dp"
        android:text="Start velocity"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="599dp" />

    <TextView
        android:id="@+id/Points_to_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/Speed_to_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="599dp" />

</android.support.constraint.ConstraintLayout>